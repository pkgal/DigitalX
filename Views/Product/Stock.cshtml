@model IEnumerable<StockWebApi.Models.Stockist>

@{
    ViewBag.Title = "Product Stock";
}

    <div class="container-fluid">
        <h4 class="heading-colored">Stockists for <u>@ViewBag.productName</u></h4><br />
        @Html.Action("_AlertBox", "Home")
        @{int total = (Model.Count() % 2 == 0 ? Model.Count() : Model.Count() + 1) / 2;}
        @{int j = 0;}
        @for (int i = 0; i < total; i++)
        {
            <div class="flex-container">
                <div class="panel panel-default" style="width:45%">
                    <div class="panel-heading heading-centered heading-lighter">
                        @Model.ElementAt(j).Name
                    </div>
                    <div class="panel-body" style="text-align:justify">
                        @Model.ElementAt(j).Address<br />
                        @Model.ElementAt(j).City<br />
                    </div>
                    <div class="panel-footer" style="text-align:right">
                        <a href="#" data-toggle="modal" data-target="#myModal">Request Stock</a>
                    </div>
                </div>
                @{j++;}
                @if (j < Model.Count())
                {
                    <div class="panel panel-default" style="width:45%">
                        <div class="panel-heading heading-centered heading-lighter">
                            @Model.ElementAt(j).Name
                        </div>
                        <div class="panel-body" style="text-align:justify">
                            @Model.ElementAt(j).Address<br />
                            @Model.ElementAt(j).City<br />
                        </div>
                        <div class="panel-footer" style="text-align:right">
                            <a href="#" data-toggle="modal" data-target="#myModal">Request Stock</a>
                        </div>
                    </div>
                    j++;
                }
                else
                {
                    <div style="width:45%" />
                }
            </div>
        }
    </div>
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Stock Request for <u>@ViewBag.productName</u></h4>
            </div>
            <div class="modal-body">
                <p>Your request is generated successfully.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-colored" data-dismiss="modal">Close</button>
            </div>
        </div>

    </div>
</div>